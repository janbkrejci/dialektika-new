{
    "private": true,
    "scripts": {
        "start": "concurrently -k --restart-tries 3 --restart-after 3000 -p [{name}] -n webpack,jekyll -c yellow,cyan npm:watch:webpack npm:watch:jekyll",
        "dev": "encore dev",
        "prod": "encore prod",
        "watch:webpack": "encore dev --watch",
        "jekyll": "encore prod && bundle exec jekyll serve --drafts --incremental --host 0.0.0.0 --port 3000",
        "watch:jekyll": "bundle exec jekyll serve --drafts --incremental --host 0.0.0.0 --port 3000",
        "lint": "eslint --cache .",
        "format": "npm run lint -- --fix",
        "postinstall": "bundle install --jobs=4 --retry=3"
    },
    "dependencies": {
        "alpinejs": "^3.2.3"
    },
    "devDependencies": {
        "@symfony/webpack-encore": "^4.2.0",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "autoprefixer": "^10.3.1",
        "concurrently": "^7.6.0",
        "eslint": "^8.0.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.23.4",
        "postcss-import": "^15.1.0",
        "postcss-loader": "^7.0.0",
        "tailwindcss": "^3.2.7",
        "w3-css": "^4.1.0"
    },
    "browserslist": [
        "> 0.5%",
        "last 2 versions",
        "Firefox ESR",
        "not dead"
    ]
}
